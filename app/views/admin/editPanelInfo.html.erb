<section class="container-fluid my-0 py-2 text-center bg-danger">
  <h1>Modificación de una elemento</h1>
</section>

<nav aria-label="breadcrumb" class="mb-2 bg-principal-color">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Panel Administrador",  admin_index_path %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">Modificar elemento</li>
    </ol>
  </nav>
</nav>

<section class="container-fluid">
  <h2>Datos del elemento</h2>

  <%= form_for @panel, url: api_v1_index_panel_info_path, method: :PATCH do |f| %>

    <div class="form-group">
      <label for="productName" class="col-12 col-form-label">Titulo</label>
      <div class="col-12">
        <%= f.text_field :title, class:'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <label for="productName" class="col-12 col-form-label">Texto</label>
      <div class="col-12">
        <%= f.text_area :text, class:'form-control', size:'24x6'%>
      </div>
    </div>

    <div class="form-group">
      <label for="productName" class="col-12 col-form-label">Posición</label>
      <div class="col-12">
        <%= f.select :type_panel, options_for_select( [['Principal','1'], ['Secundario',"2"]]) ,class:'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <label for="productName" class="col-12 col-form-label">Foto</label>
      <div class="col-12">
        <%= f.file_field :image, class:'form-control-file'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-offset-2 col-10">
        <%= f.submit "Confirmar", class:"btn btn-success"%>
        <%= link_to "Volver atrás", :back ,class:"btn btn-primary"%>
      </div>
    </div>

  <% end %>
</section>